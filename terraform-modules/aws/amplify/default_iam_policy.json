{
    "Version": "2012-10-17",
    "Statement": [
        {
            "Effect": "Allow",
            "Action": [
              "acm:DescribeCertificate",
              "acm:ListCertificates",
              "acm:RequestCertificate"
            ],
            "Resource": "arn:aws:acm:${aws_region}:${aws_account_id}:certificate/*"
        },
        {
            "Effect": "Allow",
            "Action": [
              "cloudfront:CreateCloudFrontOriginAccessIdentity",
              "cloudfront:CreateDistribution",
              "cloudfront:CreateInvalidation",
              "cloudfront:GetDistribution",
              "cloudfront:GetDistributionConfig",
              "cloudfront:ListCloudFrontOriginAccessIdentities",
              "cloudfront:ListDistributions",
              "cloudfront:ListDistributionsByLambdaFunction",
              "cloudfront:ListDistributionsByWebACLId",
              "cloudfront:ListFieldLevelEncryptionConfigs",
              "cloudfront:ListFieldLevelEncryptionProfiles",
              "cloudfront:ListInvalidations",
              "cloudfront:ListPublicKeys",
              "cloudfront:ListStreamingDistributions",
              "cloudfront:UpdateDistribution",
              "cloudfront:TagResource",
              "cloudfront:UntagResource",
              "cloudfront:ListTagsForResource"
            ],
            "Resource": "arn:aws:cloudfront::${aws_account_id}:*"
        },
        {
            "Effect": "Allow",
            "Action": [
              "iam:AttachRolePolicy",
              "iam:CreateRole",
              "iam:CreateServiceLinkedRole",
              "iam:GetRole",
              "iam:PutRolePolicy",
              "iam:PassRole",
              "iam:UpdateAssumeRolePolicy",
              "iam:DeleteRolePolicy"
            ],
            "Resource": "arn:aws:iam::${aws_account_id}:role/${role_name}"
        },
        {
            "Effect": "Allow",
            "Action": [
              "lambda:CreateFunction",
              "lambda:EnableReplication",
              "lambda:DeleteFunction",
              "lambda:GetFunction",
              "lambda:GetFunctionConfiguration",
              "lambda:PublishVersion",
              "lambda:UpdateFunctionCode",
              "lambda:UpdateFunctionConfiguration",
              "lambda:ListTags",
              "lambda:TagResource",
              "lambda:UntagResource",
              "lambda:ListEventSourceMappings",
              "lambda:CreateEventSourceMapping"
            ],
            "Resource": "arn:aws:lambda:${aws_region}:${aws_account_id}:function:*"
        },
        {
            "Effect": "Allow",
            "Action": [
              "s3:CreateBucket",
              "s3:GetAccelerateConfiguration",
              "s3:GetObject",
              "s3:ListBucket",
              "s3:PutAccelerateConfiguration",
              "s3:PutBucketPolicy",
              "s3:PutObject",
              "s3:PutBucketTagging",
              "s3:GetBucketTagging"
            ],
            "Resource": "arn:aws:s3:${aws_region}:${aws_account_id}:*"
        },
        {
            "Effect": "Allow",
            "Action": [
              "sqs:CreateQueue",
              "sqs:DeleteQueue",
              "sqs:GetQueueAttributes",
              "sqs:SetQueueAttributes"
            ],
            "Resource": "arn:aws:sqs:${aws_region}:${aws_account_id}:*"
        },
        {
            "Effect": "Allow",
            "Action": [
                "amplify:GetApp",
                "amplify:GetBranch",
                "amplify:UpdateApp",
                "amplify:UpdateBranch"
            ],
            "Resource": "arn:aws:amplify:${aws_region}:${aws_account_id}:apps/*"
        }
    ]
}